.sidebar.animated.fadeInDown
  .logo-title
    .title
      img(src= url_for(theme.logo_url),style="width:127px;")
      h3(title="")
        a(href="/")= config.title
      if theme.description
        .description
          p!= theme.description

  ul.social-links
    if theme.twitter
        li
          a(href=theme.twitter)
            i.fa.fa-twitter
    if theme.github
      li
        a(href=theme.github)
          i.fa.fa-github
    if theme.mail
      li
        a(href=theme.mail)
          i.fa.fa-envelope
    if theme.QQ
      li
        a(href= theme.QQ)
          i.fa.fa-qq
    if theme.weibo
      li
        a(href=theme.weibo)
          i.fa.fa-weibo
    if theme.zhihu
      li
        a(href=theme.zhihu)
          i.fa.fa-mortar-board
  include footer

  if theme.canvas_nest
    script(type="text/javascript", 
      color="0,255,128" 
      opacity='0.8' 
      zIndex="-2" 
      count="99" 
      src="//cdn.bootcss.com/canvas-nest.js/1.0.0/canvas-nest.min.js"
    )